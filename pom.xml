  <profiles>
    <profile>
      <!--
                Heroku removes the .git directory before launching Maven (I really don't know why). So let's re-create
                it. There is probably a much simpler way to do this (not deleting the directory in the first place
                would be nice).
            -->
      <id>git-checkout</id>
      <activation>
        <file>
          <missing>${basedir}/.git</missing>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.8</version>
            <executions>
              <execution>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>generate-resources</phase>
                <configuration>
                  <tasks>
                    <copy todir="${basedir}/.git">
                      <fileset dir="${project.build.directory}/checkout/.git"></fileset>
                    </copy>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.5.0</version>
            <executions>
              <execution>
                <id>clone-repo</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>initialize</phase>
                <configuration>
                  <successCodes>
                    <successCode>0</successCode>
                    <!-- ignore failure if output directory already exists -->
                    <successCode>128</successCode>
                  </successCodes>
                  <executable>git</executable>
                  <arguments>
                    <argument>clone</argument>
                    <argument>-n</argument>
                    <argument>https://github.com/gehel/signs-web.git</argument>
                    <argument>${project.build.directory}/checkout</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
